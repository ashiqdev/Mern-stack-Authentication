{
  "name": "mernauth",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:backend": "lerna run build --stream --ignore @mernauth/client",
    "build:watch": "lerna exec --stream --scope=@mernauth/server -- yarn watch",
    "dev:backend": "lerna exec --stream --scope=@mernauth/server -- yarn dev",
    "start:backend": "lerna exec --stream --scope=@mernauth/server -- yarn start",
    "dev:dashboard": "lerna exec --stream --scope=@mernauth/client -- yarn dev",
    "start:dashboard": "lerna exec --stream --scope=@merauth/client -- yarn start",
    "lint": "eslint . --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.1.0",
    "commitlint": "^8.3.5",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "esm": "^3.2.25",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "dependencies": {
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-parcel": "^1.10.4"
  }
}
